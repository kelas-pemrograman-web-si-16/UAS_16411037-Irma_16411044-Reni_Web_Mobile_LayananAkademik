include  ../../users/dashboard
// Content Wrapper. Contains page content
.content-wrapper
    // Content Header (Page header)
    section.content-header
        h1
            | Data Krs
        ol.breadcrumb
            li
                a(href='#')
                    i.fa.fa-dashboard
                    |  Home
            li
                a(href='#') Tables
            li.active Data tables
    // Main content
    section.content
        .row
            .col-xs-12
                // /.box-body
                // /.box
                .box
                    .box-body
                        .box.box-info
                            .box-header.with-border
                                h3.box-title Input data krs
                            // /.box-header
                            // form start
                            form.form-horizontal(method="POST", action='/'+krss._id + '/editkrs')
                                .box-body
                                    .form-group
                                        label.col-sm-2.control-label(for='npm') Npm
                                        .col-sm-10
                                            input#npm.form-control(type='text' required name="npm" placeholder='Npm' value= (npm == undefined) ? krss.npm: npm)
                                    .form-group
                                        label.col-sm-2.control-label(for='nama') Nama
                                        .col-sm-10
                                            input#nama.form-control(type='text' name="nama" placeholder='Nama' value= (nama == undefined) ? krss.nama: nama)
                                    .form-group
                                        label.col-sm-2.control-label(for='semester') Semester
                                        .col-sm-10
                                            input#semester.form-control(type='text' name="semester" placeholder='Semester' value= (semeester == undefined) ? krss.semester: semester)
                                    .form-group
                                        label.col-sm-2.control-label(for='mata_kuliah') Mata Kuliah
                                        .col-sm-10
                                            input#mata_kuliah.form-control(type='text' name="mata_kuliah" placeholder='Mata Kuliah' value= (mata_kuliah == undefined) ? krss.mata_kuliah: mata_kuliah)


                                // /.box-body
                                .box-footer
                                    button.btn.btn-info.pull-right(type='submit') Input Data
                                // /.box-footer

